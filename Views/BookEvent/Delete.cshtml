@model KitapTuru

<form method="post">
    <input asp-for="Id" hidden/>

    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Book Event Delete</h2>

            <hr />

        </div>

        <div class="mb-3">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Book Delete</button>

        <a asp-controller="BookItem" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">Book Item Come back</a>

    </div>
</form>
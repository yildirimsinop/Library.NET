@model KitapTuru

<form method="post">

    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">
                Book Event Update

            </h2>

            <hr />

        </div>

        <div class="mb-3">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>

        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Book Update</button>

        <a asp-controller="BookItem" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">Book Item Come back</a>

    </div>
</form>